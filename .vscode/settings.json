{
  "eslint.validate": ["html", "javascript", "javascriptreact"],
  "eslint.workingDirectories": [
    {
      "mode": "auto" // in such case, ESLint will take into account also sub-folders of images_gallery (and we need to get react package inside of the node_modules folder)
    }
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.autopep8"
  },
  "python.formatting.provider": "none",
  "python.pythonPath": "api/.venv/bin/python3",
  "javascript.format.enable": true,
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  }
} // you can get this file by going into settings => workspace => click top-right corner icon
